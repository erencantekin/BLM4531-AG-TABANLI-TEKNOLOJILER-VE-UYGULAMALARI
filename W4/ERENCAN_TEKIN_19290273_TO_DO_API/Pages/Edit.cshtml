@page
@model ERENCAN_TEKIN_19290273_TO_DO_API.Pages.EditModel
@{
}


<br>
<h2>Edit To-Do Task</h2>
@if (Model.errorMsg.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
<form method="POST">
    <input type="hidden" name="id" value="@Model.todotaskInfo.id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Task Title</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TaskName" value="@Model.todotaskInfo.taskName">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Task Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TaskDescription" value="@Model.todotaskInfo.taskDescription">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Task Priority 0-1-2</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TaskPriority" value="@Model.todotaskInfo.taskPriority">
        </div>
    </div>


    @if (Model.successMsg.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMsg</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-labe='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>
